#
# GreenCity AWS Infrastructure - ECR Container Registries
# Creates ECR repositories for all application images
#

# ECR Repository for BackCore
resource "aws_ecr_repository" "backcore" {
  name                 = "${var.project_name}/backcore"
  image_tag_mutability = "MUTABLE"

  image_scanning_configuration {
    scan_on_push = true
  }

  encryption_configuration {
    encryption_type = "AES256"
  }

  tags = {
    Name      = "${var.project_name}-backcore"
    Component = "backcore"
  }
}

