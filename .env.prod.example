# GreenCity Production Environment Variables
# Copy this file to .env.prod and fill in your values
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.prod up -d

# Database
DB_USER=greencity
DB_PASSWORD=your_secure_password_here

# Email (Gmail or SMTP)
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CLIENT_ID_MANAGER=your_google_client_id_manager

# Storage
BUCKET_NAME=your_bucket_name
STATIC_URL=http://your_domain:8080/
DEFAULT_PROFILE_PICTURE=https://your_storage/default_avatar.png

# Azure Storage
AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=your_container_name

# Cloudinary (optional)
CLOUD_NAME=your_cloudinary_cloud
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret

# File size limits
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB
